@{
    var username = Context.Session.GetString("Username");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BuyMart</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BuyMart.Presentation.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <!-- Brand -->
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    BuyMart
                </a>

                <!-- Mobile Menu Toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Left Side - Navigation Links -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white fw-semibold" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fw-semibold" asp-controller="Product" asp-action="Index">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fw-semibold" asp-controller="Category" asp-action="Index">Categories</a>
                        </li>
                    </ul>

                    <!-- Search Bar -->
                    <form class="d-flex mx-lg-3 my-2 my-lg-0" asp-controller="Product" asp-action="Search" method="get">
                        <input class="form-control me-2 rounded-pill" type="search" name="query"
                               placeholder="Search products..." aria-label="Search">
                        <button class="btn btn-light text-primary rounded-pill px-3" type="submit">Search</button>
                    </form>

                    <!-- Right Side - User Section -->
                    <div class="d-flex align-items-center">
                        @if (!string.IsNullOrEmpty(username))
                        {
                            <span class="text-white me-3 fw-semibold">Hello, @username! 👋</span>
                            <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-light rounded-circle me-3">
                                🛒
                            </a>
                            <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger rounded-pill px-3">Logout</a>
                        }
                        else
                        {
                            <a asp-controller="Auth" asp-action="Login" class="btn btn-light text-primary rounded-pill px-3">Login</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-primary border-top footer text-muted py-3">
        <div class="container text-white text-center">
            &copy; 2025 - BuyMart Pvt Ltd. All rights reserved.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
