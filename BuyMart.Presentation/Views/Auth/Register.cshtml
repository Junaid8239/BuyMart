@model RegisterViewModel

<div class="container d-flex justify-content-center align-items-center pt-2">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 420px; width: 100%;">
        <div class="card-body">
            <!-- Icon & Title -->
            <div class="text-center mb-3">
                <i class="fas fa-user-plus fa-3x text-primary mb-2"></i>
                <h3 class="fw-bold text-primary">Create an Account</h3>
                <p class="text-muted small">Join us and start shopping today!</p>
            </div>

            <form asp-action="Register" method="post">
                <!-- Username Field -->
                <div class="mb-3">
                    <label asp-for="Username" class="form-label fw-semibold">Username</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light">
                            <i class="fas fa-user"></i>
                        </span>
                        <input asp-for="Username" class="form-control rounded-end" required />
                    </div>
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <!-- Email Field -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold">Email</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light">
                            <i class="fas fa-envelope"></i>
                        </span>
                        <input asp-for="Email" type="email" class="form-control rounded-end" required />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <!-- Password Field -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold">Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light">
                            <i class="fas fa-lock"></i>
                        </span>
                        <input asp-for="Password" type="password" class="form-control rounded-end" required />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <!-- Confirm Password Field -->
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirm Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light">
                            <i class="fas fa-check-circle"></i>
                        </span>
                        <input asp-for="ConfirmPassword" type="password" class="form-control rounded-end" required />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100 rounded-pill fw-semibold py-2">
                    <i class="fas fa-user-plus"></i> Register
                </button>
            </form>

            <!-- Validation Errors -->
            @if (!ViewData.ModelState.IsValid)
            {
                foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p class="text-danger text-center mt-3 small">@error.ErrorMessage</p>
                }
            }

            <!-- Login Link -->
            <p class="text-center text-muted mt-3 small">
                Already have an account? <a asp-controller="Auth" asp-action="Login" class="text-decoration-none fw-semibold text-primary">Login here</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
