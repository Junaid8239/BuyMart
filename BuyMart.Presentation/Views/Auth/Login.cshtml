@model LoginViewModel

<div class="d-flex justify-content-center align-items-center pt-4">
    <div class="card shadow-lg rounded-4 p-4" style="width: 100%; max-width: 400px;">
        <div class="card-body">
            <h2 class="text-center text-primary fw-bold mb-4">Login</h2>

            <form asp-action="Login" method="post" novalidate>
                <!-- Username Field -->
                <div class="mb-3">
                    <label asp-for="Username" class="form-label fw-semibold"></label>
                    <input asp-for="Username" class="form-control rounded-pill p-2 shadow-sm" required />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <!-- Password Field -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold"></label>
                    <input asp-for="Password" type="password" class="form-control rounded-pill p-2 shadow-sm" required />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100 rounded-pill shadow">
                    <i class="fas fa-sign-in-alt"></i> Login
                </button>
            </form>

            <!-- Error Message -->
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <p class="text-danger text-center mt-3">@ViewBag.Error</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
